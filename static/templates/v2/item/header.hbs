<header class="sheet-header flexrow">
	<img class="profile-img" src="{{item.img}}" data-action="editImage" title="{{item.name}}" width="56" style="flex: 0 0 56px" />
	<div class="header-fields flexrow">
		<h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
		<div class="flex100"></div>
		{{#if (eq document.type 'feature')}}
			<div class="flex2">&nbsp;</div>
			{{formGroup schema.catharsis value=system.catharsis localize=true}}
		{{/if}}
	</div>
</header>