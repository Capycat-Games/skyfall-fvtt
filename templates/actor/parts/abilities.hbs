<ul class="list-items abilities flexrow">
	{{#each items.abilities as | ability |}}
	<li class="item ability flexcol" data-item-id="{{ability.id}}">
		<div class="item-name">{{ability.name}}</div>
		<div class="item-xxx">{{ability.name}}</div>
		<div class="item-controls">
			<a class="control" data-action="toggle" data-target="favorite">
				{{{../SYSTEM.icons.star}}}
			</a>
			<a class="control" data-action="edit" data-target="item">
				{{{../SYSTEM.icons.edit}}}
			</a>
			<a class="control" data-action="delete" data-target="item">
				{{{../SYSTEM.icons.delete}}}
			</a>
		</div>
	</li>
	{{/each}}
</ul>