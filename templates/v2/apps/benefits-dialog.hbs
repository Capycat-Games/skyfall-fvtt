<form>

	{{#each steps as | step s | }}
		<fieldset>
			<input type="hidden" name="create.{{s}}">
			<legend>{{localize step.title}}</legend>
			<ol class="plain {{ifThen (and (gte step.list.length 120) (not step.list.0.groupLabel)) 'columns-2' ''}}">
				{{#each step.list as | grant |}}
					{{#if (and grant.groupLabel (not @first)) }}
						</li>
			</ol>
			{{/if}}
			{{#if grant.groupLabel }}
				<li class="item-header">
					<h4>{{grant.groupLabel}}</h4>
					<ol class="plain flexrow" style="justify-content: space-between;">
			{{/if}}
			<li class="item {{type}} entry flexrow" data-entry-id="{{grant.item.uuid}}" style="height: 45px; flex: 0 0 49%;">
				<div class="item-icon" style="background-image:url({{grant.item.img}})"></div>
				<div class="item-name flex3" data-action="edit" style="cursor: pointer;">
					{{grant.item.name}}
				</div>
				<div class="item-controls">
					<input type="{{step.mode}}" name="create.{{s}}" value="{{ifnull step.originId grant.id}}|{{grant.item.uuid}}"
						{{checked step.checkAll}}>
				</div>
			</li>
	{{/each}}
	</ol>
	</fieldset>
	{{/each}}
</form>