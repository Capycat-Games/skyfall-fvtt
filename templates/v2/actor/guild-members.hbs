<section class="tab scrollable guild-{{tab.id}} {{tab.cssClass}} flexcol" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<ul class="plain members item-list">
		<li class="member header flexrow">
			<div class="item-name flex3">
				{{localize "SKYFALL2.Name"}}
			</div>
			<div class="item-level">
				{{localize "SKYFALL2.Level"}}
			</div>
			<div class="item-retired">
				{{localize "SKYFALL2.GUILD.Retired"}}
			</div>
			<div class="item-controls">
				-
			</div>
		</li>
		{{#each members as | member i|}}
		<li class="member flexrow" data-entry-id="{{member.uuid}}" data-index="{{i}}">
			<div class="item-name flex3 flexrow">
				<img src="{{member.img}}" class="flex0" width="52" height="52" >
				{{member.name}}
			</div>
			<div class="item-level">{{member.system.level.value}}</div>
			<div class="item-level">
				<a data-action="retire">
					{{{ifThen member.retired  @root.SYSTEM.icons.on @root.SYSTEM.icons.off}}}
				</a>
			</div>
			<div class="item-controls">
				{{!-- <a data-action="founder">
					{{localize "SKYFALL2.GUILD.Founder"}}
					{{{ifThen member.founder  @root.SYSTEM.icons.on @root.SYSTEM.icons.off}}}
				</a> --}}
				
				<a class="control" data-action="edit">{{{@root.SYSTEM.icons.edit}}}</a>
				<a class="control" data-action="deleteMember">{{{@root.SYSTEM.icons.delete}}}</a>
			</div>
		</li>
		{{/each}}
	</ul>
</div>