<div class="abilities" data-category="{{category.id}}">
	<div class="header flexrow">
		<h3>{{{category.icon}}} {{category.label}}</h3>
		{{#if @root.isEditing }}
			<div class="item-controls">
				{{!-- <a data-action="create" data-type="Item" data-type="ability">{{{@root.SYSTEM.icons.create}}}</a> --}}
			</div>
		{{/if}}
	</div>
	<ul class="plain ability">
		{{#each category.list as | ability | }}
			<li class="ability entry" data-entry-id="{{ability.id}}">
				<h4>
					<a data-action="abilityUse" data-ability-id="{{ability.id}}">
						{{#unless (eq ability.system.activation.recharge null)}}
							{{#if (eq ability.system.activation.recharge 0)}}
								<i class="fa-solid fa-hourglass"></i>
							{{/if}}
							[{{localize "SKYFALL2.ACTIVATION.Recharge"}}]
						{{/unless}}
						{{ability.name}}
					</a>
					<span class="item-controls {{ifThen @root.isPlayMode 'hidden' ''}}">
						<a class="control" data-action="edit" data-target="item">{{{../SYSTEM.icons.edit}}}</a>
						<a class="control" data-action="delete" data-delete="Item">{{{../SYSTEM.icons.delete}}}</a>
					</span>
				</h4>
				{{!-- {{#if ability.description }}{{{ability.description}}}{{/if}} --}}
				<div class="ability-properties">
					{{#each ability.system.labels.properties as | prop | }}
						<span><label>{{localize prop.label}}:</label> {{prop.descriptive}}</span>
					{{/each}}
				</div>
				<div class="ability-description">
					{{!-- prepareAbi --}}
					{{{ability._description}}}
				</div>
				{{#if false}}
					{{#each ability.system.labels.attack as | prop | }}
						<div class="rich">
							<label>{{localize prop.label}}:</label> {{{prop.descriptive}}}
						</div>
					{{/each}}
					{{#if ability.system.labels.effect }}
						<div class="rich">
							<label>{{localize ability.system.labels.effect.label}}:</label>
							{{{ability.system.labels.effect.descriptive}}}
						</div>
					{{/if}}
					{{#if ability.system.labels.trigger }}
						<div class="rich">
							<label>{{localize ability.system.labels.trigger.label}}:</label>
							{{{ability.system.labels.trigger.descriptive}}}
						</div>
					{{/if}}
					{{#if ability.system.labels.special }}
						<div class="rich">
							<label>{{localize ability.system.labels.special.label}}:</label>
							{{{ability.system.labels.special.descriptive}}}
						</div>
					{{/if}}
				{{/if}}
			</li>
		{{/each}}
	</ul>
</div>