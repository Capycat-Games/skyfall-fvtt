<section class="tab scrollable actor-{{tab.id}} {{tab.cssClass}} flexrow" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	{{#each items.spells as | spell | }}
	{{> "systems/skyfall/templates/v2/item/ability-card.hbs" item=spell labels=spell.system.labels collapse=true}}
	{{/each }}
	<hr class="flex100">
	{{#each items.sigils as | sigil | }}
	{{> "systems/skyfall/templates/v2/item/sigil-card.hbs" item=sigil labels=sigil.system.labels collapse=true}}
	{{/each }}
</section>