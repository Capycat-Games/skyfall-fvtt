<section class="tab scrollable guild-{{tab.id}} {{tab.cssClass}} flexcol" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<div class="blueprints">
		<div class="skyfall-form-group corner">
			<div class="label">
				<label>{{localize "SKYFALL2.GUILD.BlueprintPl"}}</label>
			</div>
			<div class="skyfall-form-fields">
				<textarea name="system.blueprints" style="width:100%;">{{system.blueprints}}</textarea>
			</div>
		</div>
	</div>
	<div>
		<div class="border-corners"></div>
		<ul class="plain facilities">
			<li class="facility header flexrow">
				<div class="item-img">

				</div>
				<div class="item-name flex2">
					<label>
						{{localize "SKYFALL2.Name"}}
					</label>
				</div>
				<div class="item-level">
					{{localize "SKYFALL2.Level"}}
				</div>
				<div class="item-controls">

				</div>
			</li>
			{{#each items.facilities as | facility i|}}
				<li class="facility flexrow" data-entry-id="{{facility.id}}" data-index="{{i}}">
					<div class="item-img">
						<img src="{{facility.img}}" class="flex0" width="36" height="36">
					</div>
					<div class="item-name flexrow flex2">
						{{facility.name}}
					</div>
					<div class="item-level">{{facility.system.level}}</div>
					<div class="item-controls">
						<a class="control" data-action="edit">{{{@root.SYSTEM.icons.edit}}}</a>
						<a class="control" data-action="delete">{{{@root.SYSTEM.icons.delete}}}</a>
					</div>
				</li>
			{{/each}}
		</ul>
		<div class="border-corners bottom"></div>
	</div>
	</div>