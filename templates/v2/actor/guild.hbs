<section class="tab scrollable2 guild-{{tab.id}} {{tab.cssClass}} flexcol" data-tab="{{tab.id}}" data-group="{{tab.group}}">
	<div class="main flexrow" style="align-items:stretch;">
		<fieldset class="profile flexcol">
			<img class="profile-img" src="{{actor.img}}" data-action="editImage" title="{{actor.name}}" height="125" width="125" />

			<div class="charname flex0">
				<input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
			</div>

			<div class="level">
				<div>{{localize "SKYFALL2.Level"}}</div>
				<input type="number" disabled value="{{system.level}}">
			</div>

			<div class="guild-arc flexcol">
				{{#if isGuildArcActive}}
					<button class="btn-skyfall" data-action="endArc" {{#unless user.isGM}}disabled{{/unless}}>
						{{localize "SKYFALL2.GUILD.EndGuildArc"}}
					</button>
				{{else}}
					<button class="btn-skyfall" data-action="startArc" {{#unless user.isGM}}disabled{{/unless}}>
						{{localize "SKYFALL2.GUILD.StartGuildArc"}}
					</button>
				{{/if}}
			</div>
		</fieldset>

		{{!-- ABILITIES --}}
		<fieldset class="abilities flexrow flex3">
			{{> "systems/skyfall/templates/v2/actor/guild-ability.hbs" schema=schema.abilities.cunning ability=system.abilities.cunning key="cunning" label="SKYFALL2.GUILD.Cunning"}}

			{{> "systems/skyfall/templates/v2/actor/guild-ability.hbs" schema=schema.abilities.knowledge ability=system.abilities.knowledge key="knowledge" label="SKYFALL2.GUILD.Knowledge"}}

			{{> "systems/skyfall/templates/v2/actor/guild-ability.hbs" schema=schema.abilities.crafting ability=system.abilities.crafting key="crafting" label="SKYFALL2.GUILD.Crafting"}}

			{{> "systems/skyfall/templates/v2/actor/guild-ability.hbs" schema=schema.abilities.reputation ability=system.abilities.reputation key="reputation" label="SKYFALL2.GUILD.Reputation"}}
		</fieldset>
	</div>
	<div class="flexrow frame-design">
		<div class="left">
			<div class="seals flexcol flex-start">
				<h3>{{localize "TYPES.Item.sealPl"}}</h3>
				<ul class="plain seals">
					{{#each items.seals as | seal i|}}
						<li class="seal flexrow" data-entry-id="{{seal.id}}" data-index="{{i}}">
							<div class="item-name flexrow flex2">
								<img src="{{seal.img}}" class="flex0">
								<label>{{seal.name}}</label>
							</div>
							<div class="item-controls">
								<a class="control" data-action="edit">{{{@root.SYSTEM.icons.edit}}}</a>
								<a class="control" data-action="delete">{{{@root.SYSTEM.icons.delete}}}</a>
							</div>
						</li>
					{{/each}}
				</ul>
			</div>
			<div class="motto">
				<h3>{{localize schema.motto.label}}</h3>
				<div class="form-fields">
					{{formInput schema.motto value=system.motto elementType='textarea'}}
				</div>
			</div>
		</div>
		<div class="right">
			{{> "systems/skyfall/templates/v2/actor/guild-actions-list.hbs"}}
		</div>
	</div>
</section>